						attList.addItem(surface);
						attValues = new ArrayList();
						attValues.addItem(attList);
						argObj = new Object();
						argObj["surface"] = attValues;
						p = geoOperations.Center.centerOfMIC(argObj);
						
						position = p.position;
					}
					
					var circle:Circle = new Circle(position, 10);
