			protected function drawSelectedGeometry(geoms:ArrayList):void {
				if (geoms == null) return;
				
				for (var i:int = 0; i < geoms.length; i ++) {
					var geom:* = geoms.getItemAt(i);
					var position:Coordinate2;
					
					if (geom is SG_Point) {
						position = geom.position;	
					}
					
					if (geom is SG_Curve) {
						curve = geom as SG_Curve;
						var attList:ArrayList = new ArrayList();
						attList.addItem(curve);
						var attValues:ArrayList = new ArrayList();
						attValues.addItem(attList);
						var argObj:Object = new Object();
						argObj["curve"] = attValues;
						var p:SG_Point = geoOperations.Center.centerLayingOnCurve(argObj);
						
						position = p.position;
					}
					
					if (geom is SG_Surface) {
						surface = geom as SG_Surface;
